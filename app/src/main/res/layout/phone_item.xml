<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/clickable_white"
    android:elevation="@dimen/elevationHigh">

    <ImageButton style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/photo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_marginTop="@dimen/pad"
        android:layout_marginBottom="@dimen/pad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerInside"
        android:padding="@dimen/pad"
        android:src="@drawable/color_black15_rounded"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photo"
        android:drawablePadding="@dimen/pad"
        android:textSize="18sp"
        android:textColor="@color/textInverse"
        android:padding="12dp"
        tools:text="Mai Hoang Truc Pham"/>

    <TextView
        android:id="@+id/reaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintHorizontal_bias="1.0"
        android:drawablePadding="@dimen/pad"
        android:textSize="18sp"
        android:textColor="@color/textInverse"
        android:padding="16dp"
        tools:text="Love"/>

</android.support.constraint.ConstraintLayout>