<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityLayout"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backgroundColor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/color_white_rounded"
        android:clickable="true"
        android:elevation="@dimen/padDouble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_max="@dimen/miniWindowHeight"
        tools:layout_constraintHeight_max="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/windowTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/clickable_light"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/padDouble"
            android:paddingTop="@dimen/pad"
            android:paddingRight="@dimen/padDouble"
            android:paddingBottom="@dimen/padHalf"
            android:textAllCaps="true"
            android:textColor="@color/textInverse"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/feature_requests" />

        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="@string/add_action"
            android:padding="6dp"
            android:textSize="12sp"
            android:tint="@color/red"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add_black_24dp"
            android:background="@drawable/clickable_light"
            android:text="@string/add_feature_request" />

        <TextView
            android:id="@+id/betaMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/clickable_green_light_fill"
            android:gravity="center_horizontal"
            android:padding="@dimen/padDouble"
            android:textColor="@color/text"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/windowTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/beta_message" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/featureRequestsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/betaMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="@dimen/padDouble"
        android:clipChildren="false"
        android:clipToPadding="false"
        tools:listitem="@layout/item_feature_request" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>