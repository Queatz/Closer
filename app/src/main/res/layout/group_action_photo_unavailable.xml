<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="@dimen/groupActionCombinedWidth"
    android:layout_height="@dimen/groupActionCombinedHeight"
    android:layout_marginStart="@dimen/pad"
    android:clipChildren="true"
    android:background="@drawable/rounded_disabled_8dp"
    android:elevation="@dimen/elevationSmall">

    <TextView
        android:id="@+id/actionName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/gradient_shadow_top_rounded_8dp"
        android:gravity="center"
        android:padding="@dimen/pad"
        android:textColor="@color/text"
        android:maxLines="3"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        android:clickable="true"
        android:text="@string/this_activity_is_private_or_unavailable" />

</androidx.constraintlayout.widget.ConstraintLayout>