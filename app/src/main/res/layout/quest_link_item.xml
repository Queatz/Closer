<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/pad"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/clickable_light_flat"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp"
        android:drawableStart="@drawable/ic_baseline_terrain_24"
        android:drawableTint="@color/text"
        android:drawablePadding="@dimen/pad"
        android:textColor="@color/text"
        android:textSize="@dimen/textSizeSmall"
        android:textStyle="bold"
        tools:text="Book a room"
        android:focusable="true" />

</FrameLayout>