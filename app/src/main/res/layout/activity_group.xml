<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backgroundColor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/color_white_rounded"
        android:clickable="true"
        android:elevation="@dimen/padDouble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_max="@dimen/miniWindowHeight"
        tools:layout_constraintHeight_max="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/backgroundPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:importantForAccessibility="no"/>

        <ImageView
            android:id="@+id/profilePhoto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent=".333"
            android:src="@color/black_50"
            android:scaleType="centerCrop"
            android:importantForAccessibility="no"
            android:visibility="gone"
            tools:visibility="visible"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/topBarrier"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:barrierDirection="bottom"
            app:barrierAllowsGoneWidgets="true"
            app:constraint_referenced_ids="groupAbout,profilePhoto"/>

        <TextView
            android:id="@+id/groupName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/clickable_light"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/padDouble"
            android:paddingTop="@dimen/pad"
            android:paddingEnd="@dimen/padDouble"
            android:paddingBottom="@dimen/padHalf"
            android:textAllCaps="true"
            android:textColor="@color/text"
            android:textSize="@dimen/textSizeSmall"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="888 Friends" />

        <RatingBar style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/groupRatingAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad"
            android:layout_marginTop="@dimen/padHalf"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/groupRatingCount"
            app:layout_constraintTop_toBottomOf="@+id/groupName"
            app:layout_constraintBottom_toTopOf="@+id/groupDetails"
            android:visibility="gone"
            tools:visibility="visible"
            android:stepSize=".5"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="5" />

        <TextView
            android:id="@+id/groupRatingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/pad"
            android:paddingTop="@dimen/padHalf"
            android:paddingStart="@dimen/padHalf"
            android:singleLine="true"
            tools:text="(22 reviews)"
            android:textColor="@color/text"
            android:textSize="@dimen/textSizeSmall"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/groupRatingAverage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groupName"
            app:layout_constraintBottom_toTopOf="@+id/groupDetails" />


        <TextView
            android:id="@+id/groupDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/padDouble"
            android:paddingEnd="@dimen/padDouble"
            android:paddingBottom="@dimen/padHalf"
            android:textAllCaps="true"
            android:textColor="@color/text"
            android:textSize="@dimen/textSizeSmall"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="5:00AM - 7:00AM"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groupRatingAverage"
            app:layout_constraintBottom_toTopOf="@+id/peopleInGroup" />

        <TextView
            android:id="@+id/peopleInGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/clickable_light"
            android:clickable="true"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="@dimen/padDouble"
            android:paddingEnd="@dimen/padDouble"
            android:paddingBottom="@dimen/pad"
            android:paddingTop="@dimen/padHalf"
            android:scrollHorizontally="true"
            android:singleLine="true"
            tools:text="Jacob, Bun, Mai, Phoung (invited), Le My, Stella"
            android:textColor="@color/text"
            android:textSize="@dimen/textSizeSmall"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groupDetails"
            app:layout_constraintBottom_toTopOf="@+id/groupAbout" />

        <TextView
            android:id="@+id/groupAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:background="@drawable/clickable_light"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="@dimen/padDouble"
            android:paddingEnd="@dimen/padDouble"
            android:paddingBottom="@dimen/pad"
            android:paddingTop="@dimen/padHalf"
            android:scrollHorizontally="true"
            android:singleLine="true"
            tools:text="All of us bros &amp; sisses"
            android:textColor="@color/text"
            android:textSize="@dimen/textSizeSmall"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/peopleInGroup"
            app:layout_constraintBottom_toTopOf="@+id/topBarrier"/>

        <ImageButton
            android:id="@+id/scopeIndicatorButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/public_group"
            android:padding="6dp"
            android:textSize="@dimen/textSizeSmall"
            android:tint="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/ic_public_black_24dp"
            android:background="@drawable/clickable_light"
            android:visibility="gone"
            tools:visibility="visible"
            android:focusable="true"
            android:focusedByDefault="true"/>

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/add_action"
            android:padding="6dp"
            android:textSize="@dimen/textSizeSmall"
            android:tint="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:background="@drawable/clickable_light"
            android:text="@string/group_settings"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageButton
            android:id="@+id/notificationSettingsButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/settingsButton"
            android:contentDescription="@string/unsubscribe"
            android:padding="6dp"
            android:textSize="@dimen/textSizeSmall"
            android:tint="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/ic_notifications_off_black_24dp"
            android:background="@drawable/clickable_light"
            android:text="@string/unsubscribe"
            android:visibility="gone"
            tools:visibility="visible"/>

        <closer.vlllage.com.closer.ui.FixedUpRecyclerView
            android:id="@+id/eventToolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintWidth_default="wrap"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBarrier"
            android:overScrollMode="never"
            tools:listitem="@layout/toolbar_item"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:orientation="horizontal" />

        <FrameLayout
            android:id="@+id/contentFrame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/meetLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventToolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/meetLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/lowerSpacer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible"
            android:elevation="@dimen/elevation"
            android:background="@drawable/rounded_white_bkg"
            app:layout_constraintTop_toBottomOf="@+id/contentFrame">

            <TextView
                android:id="@+id/meetPrompt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/meetFalse"
                app:layout_constraintEnd_toStartOf="@id/meetTrue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingStart="@dimen/pad"
                android:paddingEnd="@dimen/pad"
                android:paddingTop="@dimen/padDouble"
                android:paddingBottom="@dimen/padDouble"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Want to meet Allen?"
                android:textColor="@color/textInverse"/>

            <Button style="?android:borderlessButtonStyle"
                android:id="@+id/meetTrue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/yes"
                android:paddingStart="@dimen/padDouble"
                android:paddingEnd="@dimen/padDouble"
                android:drawableEnd="@drawable/ic_check_black_24dp"
                android:drawablePadding="@dimen/pad"
                android:background="?selectableItemBackgroundBorderless"
                android:textColor="@color/green700"
                android:drawableTint="@color/green700"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button style="?android:borderlessButtonStyle"
                android:id="@+id/meetFalse"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/pass"
                android:paddingStart="@dimen/padDouble"
                android:paddingEnd="@dimen/padDouble"
                android:drawableStart="@drawable/ic_close_black_24dp"
                android:drawablePadding="@dimen/pad"
                android:background="?selectableItemBackgroundBorderless"
                android:textColor="@color/red"
                android:drawableTint="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/lowerSpacer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_goneMarginBottom="@dimen/pad"
            app:layout_constraintBottom_toTopOf="@id/closeButton"
            app:layout_constraintTop_toBottomOf="@id/meetLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/closeButton"
            style="@style/Widget.AppCompat.Light.ActionButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/close_messages"
            android:src="@drawable/ic_expand_more_black_24dp"
            android:tint="@color/text"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/lowerSpacer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>