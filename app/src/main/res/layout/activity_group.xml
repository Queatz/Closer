<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/backgroundColor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/color_primary_rounded"
        android:clickable="true"
        android:elevation="@dimen/padDouble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_max="@dimen/miniWindowHeight"
        tools:layout_constraintHeight_max="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/backgroundPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:importantForAccessibility="no"/>

        <ImageView
            android:id="@+id/profilePhoto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="4:3"
            android:src="@color/black_50"
            android:scaleType="centerCrop"
            android:importantForAccessibility="no"
            android:visibility="gone"
            tools:visibility="visible"/>

        <android.support.constraint.Barrier
            android:id="@+id/topBarrier"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:barrierDirection="bottom"
            app:barrierAllowsGoneWidgets="true"
            app:constraint_referenced_ids="groupAbout,profilePhoto"/>

        <ImageButton
            android:id="@+id/scopeIndicatorButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/public_group"
            android:padding="6dp"
            android:textSize="12sp"
            android:tint="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/ic_public_black_24dp"
            android:background="@drawable/clickable_light"
            android:visibility="gone"
            tools:visibility="visible"
            android:focusable="true"
            android:focusedByDefault="true"/>

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="@string/add_action"
            android:padding="6dp"
            android:textSize="12sp"
            android:tint="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:background="@drawable/clickable_light"
            android:text="@string/group_settings"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageButton
            android:id="@+id/notificationSettingsButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/settingsButton"
            android:contentDescription="@string/unsubscribe"
            android:padding="6dp"
            android:textSize="12sp"
            android:tint="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/ic_notifications_off_black_24dp"
            android:background="@drawable/clickable_light"
            android:text="@string/unsubscribe"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/groupName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/clickable_light"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/padDouble"
            android:paddingTop="@dimen/pad"
            android:paddingRight="@dimen/padDouble"
            android:paddingBottom="@dimen/padHalf"
            android:textAllCaps="true"
            android:textColor="@color/text"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="888 Friends" />

        <TextView
            android:id="@+id/groupDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/padDouble"
            android:paddingRight="@dimen/padDouble"
            android:paddingBottom="@dimen/padHalf"
            android:textAllCaps="true"
            android:textColor="@color/text"
            android:textSize="12sp"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="5:00AM - 7:00AM"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groupName"
            app:layout_constraintBottom_toTopOf="@+id/peopleInGroup" />

        <TextView
            android:id="@+id/peopleInGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/clickable_light"
            android:clickable="true"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="@dimen/padDouble"
            android:paddingRight="@dimen/padDouble"
            android:paddingBottom="@dimen/pad"
            android:paddingTop="@dimen/padHalf"
            android:scrollHorizontally="true"
            android:singleLine="true"
            tools:text="Jacob, Bun, Mai, Phoung (invited), Le My, Stella"
            android:textColor="@color/text"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/groupDetails"
            app:layout_constraintBottom_toTopOf="@+id/groupAbout" />

        <TextView
            android:id="@+id/groupAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:background="@drawable/clickable_light"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="@dimen/padDouble"
            android:paddingRight="@dimen/padDouble"
            android:paddingBottom="@dimen/pad"
            android:paddingTop="@dimen/padHalf"
            android:scrollHorizontally="true"
            android:singleLine="true"
            tools:text="All of us bros &amp; sises"
            android:textColor="@color/text"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/peopleInGroup"
            app:layout_constraintBottom_toTopOf="@+id/topBarrier"/>

        <LinearLayout
            android:id="@+id/eventToolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBarrier">
            <Button
                android:id="@+id/actionShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/pad"
                android:textSize="12sp"
                android:drawableTint="@color/text"
                android:drawableTop="@drawable/ic_share_black_24dp"
                android:drawablePadding="@dimen/padHalf"
                android:background="@drawable/clickable_light"
                android:text="@string/share"
                android:textColor="@color/text" />
            <Button
                android:id="@+id/actionShowOnMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/pad"
                android:textSize="12sp"
                android:drawableTint="@color/text"
                android:drawableTop="@drawable/ic_my_location_black_24dp"
                android:drawablePadding="@dimen/padHalf"
                android:background="@drawable/clickable_light"
                android:text="@string/show_on_map"
                android:textColor="@color/text" />
            <Button
                android:id="@+id/actionCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/pad"
                android:textSize="12sp"
                android:drawableTint="@color/text"
                android:drawableTop="@drawable/ic_close_black_24dp"
                android:drawablePadding="@dimen/padHalf"
                android:background="@drawable/clickable_light"
                android:text="@string/cancel"
                android:textColor="@color/text" />
            <Button
                android:id="@+id/actionSettingsSetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/pad"
                android:textSize="12sp"
                android:drawableTint="@color/text"
                android:drawableTop="@drawable/ic_edit_location_black_24dp"
                android:drawablePadding="@dimen/padHalf"
                android:background="@drawable/clickable_light"
                android:text="@string/set_name"
                android:textColor="@color/text"
                android:visibility="gone"
                tools:visibility="visible" />
            <Button
                android:id="@+id/actionSettingsSetBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/pad"
                android:textSize="12sp"
                android:drawableTint="@color/text"
                android:drawableTop="@drawable/ic_camera_black_24dp"
                android:drawablePadding="@dimen/padHalf"
                android:background="@drawable/clickable_light"
                android:text="@string/set_background"
                android:textColor="@color/text"
                android:visibility="gone"
                tools:visibility="visible" />
            <Button
                android:id="@+id/actionSettingsGetDirections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/pad"
                android:textSize="12sp"
                android:drawableTint="@color/text"
                android:drawableTop="@drawable/ic_directions_black_24dp"
                android:drawablePadding="@dimen/padHalf"
                android:background="@drawable/clickable_light"
                android:text="@string/get_directions"
                android:textColor="@color/text"
                android:visibility="gone"
                tools:visibility="visible" />
            <Button
                android:id="@+id/actionSettingsHostEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/pad"
                android:textSize="12sp"
                android:drawableTint="@color/text"
                android:drawableTop="@drawable/ic_event_note_black_24dp"
                android:drawablePadding="@dimen/padHalf"
                android:background="@drawable/clickable_light"
                android:text="@string/host_event"
                android:textColor="@color/text"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pinnedMessagesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/pad"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventToolbar"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintHeight_max="120dp"
            android:paddingBottom="@dimen/pad"
            android:overScrollMode="never"
            tools:listitem="@layout/message_item"/>

        <ImageButton
            android:id="@+id/closeButton"
            style="@style/Widget.AppCompat.Light.ActionButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/close_messages"
            android:src="@drawable/ic_expand_more_black_24dp"
            android:tint="@color/text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/sendButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginRight="@dimen/pad"
            app:layout_constraintBottom_toTopOf="@+id/closeButton"
            app:layout_constraintRight_toRightOf="parent"
            android:minWidth="0dp"
            android:background="@drawable/clickable_light_flat"
            android:padding="@dimen/pad"
            android:tint="@color/text"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:contentDescription="@string/send_message" />

        <EditText
            android:id="@+id/replyMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad"
            android:layout_marginTop="@dimen/pad"
            android:layout_marginRight="@dimen/pad"
            app:layout_constraintBottom_toTopOf="@+id/closeButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/sendButton"
            android:background="@drawable/clickable_light_flat"
            android:focusedByDefault="false"
            android:hint="@string/say_something"
            android:imeOptions="actionGo"
            android:inputType="textShortMessage|textCapSentences"
            android:maxLines="1"
            android:paddingLeft="@dimen/padDouble"
            android:paddingTop="@dimen/pad"
            android:paddingRight="@dimen/padDouble"
            android:paddingBottom="@dimen/pad"
            android:selectAllOnFocus="true"
            android:textColor="@color/text"
            android:textColorHint="@color/textHint"
            android:textColorHighlight="@color/colorAccent_50"
            android:textSize="12sp"
            tools:text="Hey guys let's go out" />

        <closer.vlllage.com.closer.ui.MaxSizeFrameLayout
            android:id="@+id/actionFrameLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/pad"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/mentionSuggestionsLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:visibility="gone"
            tools:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/actionRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/pad"
                android:clipToPadding="false"
                android:clipChildren="false"
                tools:layoutManager="android.support.v7.widget.GridLayoutManager"
                tools:listitem="@layout/group_action_photo_item"
                tools:orientation="horizontal" />

        </closer.vlllage.com.closer.ui.MaxSizeFrameLayout>

        <closer.vlllage.com.closer.ui.MaxSizeFrameLayout
            android:id="@+id/mentionSuggestionsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/pad"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/replyMessage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            tools:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mentionSuggestionRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/pad"
                android:clipToPadding="false"
                tools:listitem="@layout/group_action_item"
                tools:layoutManager="android.support.v7.widget.GridLayoutManager"
                tools:orientation="horizontal"/>

        </closer.vlllage.com.closer.ui.MaxSizeFrameLayout>

        <ImageButton style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/sendMoreButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:layout_constraintTop_toTopOf="@+id/replyMessage"
            app:layout_constraintBottom_toBottomOf="@+id/replyMessage"
            app:layout_constraintRight_toRightOf="@+id/replyMessage"
            android:minWidth="0dp"
            android:background="@drawable/clickable_light_rounded"
            android:padding="@dimen/pad"
            android:tint="@color/text"
            android:src="@drawable/ic_more_horiz_black_24dp"
            android:contentDescription="@string/more_options" />

        <LinearLayout
            android:id="@+id/sendMoreLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/sendMoreButton"
            app:layout_constraintBottom_toBottomOf="@+id/sendMoreButton"
            app:layout_constraintRight_toLeftOf="@+id/sendMoreButton"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageButton style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/sendMoreActionPhoto"
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:layout_constraintTop_toTopOf="@+id/replyMessage"
                app:layout_constraintBottom_toBottomOf="@+id/replyMessage"
                app:layout_constraintRight_toRightOf="@+id/replyMessage"
                android:minWidth="0dp"
                android:background="@drawable/clickable_light"
                android:padding="@dimen/pad"
                android:tint="@color/text"
                android:src="@drawable/ic_photo_black_24dp"
                android:contentDescription="@string/send_message" />

            <ImageButton style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/sendMoreActionVideo"
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:layout_constraintTop_toTopOf="@+id/replyMessage"
                app:layout_constraintBottom_toBottomOf="@+id/replyMessage"
                app:layout_constraintRight_toRightOf="@+id/replyMessage"
                android:visibility="gone"
                android:minWidth="0dp"
                android:background="@drawable/clickable_light"
                android:padding="@dimen/pad"
                android:tint="@color/text"
                android:src="@drawable/ic_videocam_black_24dp"
                android:contentDescription="@string/send_message" />

            <ImageButton style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/sendMoreActionAudio"
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:layout_constraintTop_toTopOf="@+id/replyMessage"
                app:layout_constraintBottom_toBottomOf="@+id/replyMessage"
                app:layout_constraintRight_toRightOf="@+id/replyMessage"
                android:visibility="gone"
                android:minWidth="0dp"
                android:background="@drawable/clickable_light"
                android:padding="@dimen/pad"
                android:tint="@color/text"
                android:src="@drawable/ic_audiotrack_black_24dp"
                android:contentDescription="@string/send_message" />

            <ImageButton style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/sendMoreActionFile"
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:layout_constraintTop_toTopOf="@+id/replyMessage"
                app:layout_constraintBottom_toBottomOf="@+id/replyMessage"
                app:layout_constraintRight_toRightOf="@+id/replyMessage"
                android:visibility="gone"
                android:minWidth="0dp"
                android:background="@drawable/clickable_light"
                android:padding="@dimen/pad"
                android:tint="@color/text"
                android:src="@drawable/ic_file_upload_black_24dp"
                android:contentDescription="@string/send_message" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/messagesRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/pad"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/actionFrameLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pinnedMessagesRecyclerView"
            tools:listitem="@layout/message_item" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shareWithRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/pad"
            android:visibility="gone"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/actionFrameLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pinnedMessagesRecyclerView" />

        <EditText
            android:id="@+id/searchContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad"
            android:layout_marginTop="@dimen/pad"
            android:layout_marginRight="@dimen/pad"
            app:layout_constraintBottom_toTopOf="@+id/closeButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@drawable/clickable_light_flat"
            android:focusedByDefault="false"
            android:hint="@string/phone_number_or_name"
            android:imeOptions="actionGo"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:paddingLeft="@dimen/padDouble"
            android:paddingTop="@dimen/pad"
            android:paddingRight="@dimen/padDouble"
            android:paddingBottom="@dimen/pad"
            android:selectAllOnFocus="true"
            android:textColor="@color/text"
            android:textColorHint="@color/textHint"
            android:textColorHighlight="@color/colorAccent_50"
            android:textSize="12sp" />

        <Button style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/showPhoneContactsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/searchContacts"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="@dimen/padDouble"
            android:paddingRight="@dimen/padDouble"
            android:visibility="gone"
            android:background="@drawable/clickable_light"
            android:textColor="@color/text"
            android:text="@string/show_contacts"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/contactsRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/pad"
            app:layout_constraintBottom_toTopOf="@+id/showPhoneContactsButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pinnedMessagesRecyclerView"/>

        <android.support.constraint.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messagesLayoutGroup"
            app:constraint_referenced_ids="replyMessage,sendButton,pinnedMessagesRecyclerView,messagesRecyclerView,actionFrameLayout"/>

        <android.support.constraint.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/membersLayoutGroup"
            android:visibility="gone"
            app:constraint_referenced_ids="searchContacts,contactsRecyclerView"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>