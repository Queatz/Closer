<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="closer.vlllage.com.closer.MapsActivity" />

    <RelativeLayout
        android:id="@+id/bubbleMapLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/replyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_white"
            android:elevation="16dp"
            android:maxWidth="360dp"
            android:layout_centerHorizontal="true"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:layout_margin="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/replyLayoutName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/name"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="Jacob" />

            <TextView
                android:id="@+id/replyLayoutStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="ðŸ‘Š fist bump" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <EditText
                    android:id="@+id/message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:imeOptions="actionGo"
                    android:hint="Write a reply..."
                    android:padding="8dp"
                    android:inputType="textShortMessage"
                    android:background="@null"
                    android:maxLines="1"/>

                <Button style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/sendButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:minWidth="0dp"
                    android:textColor="@color/button_text_color"
                    android:text="@string/reply" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/myStatusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_margin="16dp"
            android:elevation="8dp"
            android:maxWidth="360dp"
            android:background="@drawable/rounded_white_bkg">

            <EditText
                android:id="@+id/currentStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:imeOptions="actionGo"
                android:background="@null"
                android:inputType="textShortMessage"
                android:hint="What's up?"
                android:maxLines="1" />

            <Button style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/visibleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:minWidth="0dp"
                android:textColor="@color/button_text_color"
                android:text="On" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>