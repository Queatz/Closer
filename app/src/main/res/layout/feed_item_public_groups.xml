<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/elevation"
    android:paddingTop="@dimen/padHalf"
    android:paddingBottom="@dimen/padHalf"
    android:background="@drawable/color_green_rounded"
    android:layout_marginTop="@dimen/pad"
    android:layout_marginStart="@dimen/pad"
    android:layout_marginEnd="@dimen/pad"
    android:layout_marginBottom="@dimen/padQuadruple"
    android:clickable="true">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="4dp"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="@color/text"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="@string/activities" />

    <closer.vlllage.com.closer.ui.SoftScrollStopper
        android:id="@+id/groupActionsRecyclerViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/groupActionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingRight="@dimen/pad"
        android:paddingTop="@dimen/pad"
        android:paddingBottom="@dimen/pad" />

    </closer.vlllage.com.closer.ui.SoftScrollStopper>

    <TextView
        android:id="@+id/groupsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/groupActionsRecyclerViewContainer"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="4dp"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="@color/text"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="@string/public_groups" />

    <closer.vlllage.com.closer.ui.SoftScrollStopper
        android:id="@+id/publicGroupsRecyclerViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/groupsTitle">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/publicGroupsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padHalf"
            android:paddingRight="@dimen/padHalf"
            android:clipToPadding="false" />

    </closer.vlllage.com.closer.ui.SoftScrollStopper>

    <EditText
        android:id="@+id/searchGroups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/publicGroupsRecyclerViewContainer"
        app:layout_constraintBottom_toTopOf="@+id/action"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/clickable_light_flat"
        android:focusedByDefault="true"
        android:hint="@string/search_public_groups_hint"
        android:imeOptions="actionGo"
        android:inputType="text|textCapWords"
        android:maxLines="1"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:selectAllOnFocus="true"
        android:textColor="@color/text"
        android:textColorHint="@color/textHint"
        android:textColorHighlight="@color/colorAccent_50"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/action"
        style="@style/Widget.AppCompat.Light.ActionButton"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@drawable/clickable_light_rounded_8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchGroups"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/search_for_groups"
        android:src="@drawable/ic_expand_more_black_24dp"
        android:tint="@color/white" />

</android.support.constraint.ConstraintLayout>