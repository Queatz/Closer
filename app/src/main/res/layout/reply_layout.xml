<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/replyLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/rounded_white"
    android:elevation="16dp"
    android:maxWidth="360dp"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/replyLayoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/replyLayoutStatus"
        app:layout_constraintLeft_toLeftOf="@+id/replyLayoutStatus"
        android:textSize="14sp"
        android:textColor="@color/name"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:text="Jacob" />

    <TextView
        android:id="@+id/replyLayoutStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/message"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textIsSelectable="true"
        tools:text="ðŸ‘Š fist bump" />

    <EditText
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/replyLayoutStatus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sendButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:imeOptions="actionGo"
        android:hint="@string/write_a_reply"
        android:padding="8dp"
        android:inputType="textShortMessage"
        android:background="@null"
        android:maxLines="1"/>

    <Button style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/message"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/message"
        app:layout_constraintBottom_toBottomOf="@+id/message"
        android:layout_marginRight="8dp"
        android:textStyle="bold"
        android:minWidth="0dp"
        android:textColor="@color/button_text_color"
        android:text="@string/reply" />

    <ImageButton
        android:id="@+id/getdDirectionsButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/get_directions"
        android:minWidth="0dp"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_directions_black_24dp"/>

</android.support.constraint.ConstraintLayout>