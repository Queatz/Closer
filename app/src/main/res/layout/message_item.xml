<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padDouble"
    android:paddingRight="@dimen/padDouble">

    <LinearLayout
        android:id="@+id/messageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="@dimen/padDouble"
        android:background="@drawable/rounded_dim_8dp"
        android:padding="@dimen/pad"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text"
            android:textStyle="bold"
            tools:text="Stella" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:maxHeight="256dp"
            android:transitionName="photo"
            android:contentDescription="@string/photo"
            android:visibility="gone" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text"
            android:textIsSelectable="true"
            android:linksClickable="true"
            android:autoLink="all"
            tools:text="Where are we going this weekend?" />

        <TextView
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="@dimen/padDouble"
            android:paddingRight="@dimen/padDouble"
            android:gravity="center_vertical"
            android:elevation="2dp"
            android:textAllCaps="true"
            android:background="@drawable/clickable_accent"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="10sp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Show Location" />

    </LinearLayout>

    <closer.vlllage.com.closer.ui.MaxSizeFrameLayout
        android:id="@+id/messageActionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/pad"
        android:paddingBottom="@dimen/padHalf"
        app:layout_constraintTop_toBottomOf="@+id/messageLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/messageActionReply"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/groupActionHeight"
                    android:layout_marginEnd="@dimen/pad"
                    android:background="@drawable/clickable_light_flat"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/text"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Reply"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/messageActionShare"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/groupActionHeight"
                    android:layout_marginEnd="@dimen/pad"
                    android:background="@drawable/clickable_light_flat"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/text"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Share"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/messageActionReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/groupActionHeight"
                    android:layout_marginEnd="@dimen/pad"
                    android:background="@drawable/clickable_light_flat"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/text"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Reminder"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/messageActionPin"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/groupActionHeight"
                    android:layout_marginEnd="@dimen/pad"
                    android:background="@drawable/clickable_light_flat"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/text"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Pin"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/messageActionVote"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/groupActionHeight"
                    android:layout_marginEnd="@dimen/pad"
                    android:background="@drawable/clickable_light_flat"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/text"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Vote"
                    android:focusable="true" />

            </LinearLayout>

        </HorizontalScrollView>

    </closer.vlllage.com.closer.ui.MaxSizeFrameLayout>

    <LinearLayout
        android:id="@+id/timeLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageActionLayout"
        android:layout_marginStart="@dimen/padHalf"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text"
            tools:text="8:45pm" />

        <TextView
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="8:45pm" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>