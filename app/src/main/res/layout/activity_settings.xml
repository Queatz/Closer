<?xml version="1.0" encoding="utf-8"?>
<closer.vlllage.com.closer.ui.FitsSystemWindowsConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/connectionError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padDouble"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        android:gravity="center"
        android:background="@drawable/rounded_white_bkg"
        android:paddingTop="@dimen/pad"
        android:paddingBottom="@dimen/pad"
        android:paddingStart="@dimen/padDouble"
        android:paddingEnd="@dimen/padDouble"
        android:elevation="8dp"
        android:textColor="@color/textInverse"
        android:drawableStart="@drawable/ic_signal_cellular_connected_no_internet_0_bar_black_24dp"
        android:drawablePadding="@dimen/pad"
        android:drawableTint="@color/red"
        android:text="@string/network_down" />

    <TextView
        android:id="@+id/settingsHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/connectionError"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="@dimen/padQuadruple"
        android:paddingEnd="@dimen/padQuadruple"
        android:paddingTop="@dimen/padDouble"
        android:paddingBottom="@dimen/padDouble"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:gravity="start"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="@string/settings" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/settingsHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/publicNotificationsSettingsSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padQuadruple"
                android:paddingEnd="@dimen/padQuadruple"
                android:paddingTop="@dimen/padQuadruple"
                android:paddingBottom="@dimen/padDouble"
                android:textColor="@color/text"
                android:background="@drawable/clickable_light"
                android:gravity="start"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/settings_public_notifications" />

            <TextView
                android:id="@+id/publicNotificationsSettingsSwitchDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padQuadruple"
                android:paddingEnd="@dimen/padQuadruple"
                android:paddingBottom="@dimen/padDouble"
                android:textColor="@color/textHint"
                android:gravity="start"
                android:text="@string/public_notifications_switch_description" />

            <Switch
                android:id="@+id/autoAnswerSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padQuadruple"
                android:paddingEnd="@dimen/padQuadruple"
                android:paddingTop="@dimen/padQuadruple"
                android:paddingBottom="@dimen/padDouble"
                android:textColor="@color/text"
                android:background="@drawable/clickable_light"
                android:gravity="start"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/auto_answer_calls" />

            <Switch
                android:id="@+id/lightThemeSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padQuadruple"
                android:paddingEnd="@dimen/padQuadruple"
                android:paddingTop="@dimen/padQuadruple"
                android:paddingBottom="@dimen/padDouble"
                android:textColor="@color/text"
                android:background="@drawable/clickable_light"
                android:gravity="start"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/settings_use_light_theme" />

            <Switch
                android:id="@+id/openGroupsExpandedSettingsSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padQuadruple"
                android:paddingEnd="@dimen/padQuadruple"
                android:paddingTop="@dimen/padQuadruple"
                android:paddingBottom="@dimen/padDouble"
                android:textColor="@color/text"
                android:background="@drawable/clickable_light"
                android:gravity="start"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/settings_open_groups_expanded" />

            <Switch
                android:id="@+id/showCloseButtonSettingsSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padQuadruple"
                android:paddingEnd="@dimen/padQuadruple"
                android:paddingTop="@dimen/padQuadruple"
                android:paddingBottom="@dimen/padDouble"
                android:textColor="@color/text"
                android:background="@drawable/clickable_light"
                android:gravity="start"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/settings_show_close_button" />

            <Button style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/featureRequestsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padQuadruple"
                android:textColor="@color/text"
                android:background="@drawable/clickable_light"
                android:gravity="start"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/feature_requests"
                android:drawableStart="@drawable/ic_star_black_24dp"
                android:drawablePadding="@dimen/pad"
                android:drawableTint="@color/text" />

            <Button style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/sendFeedbackButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padQuadruple"
                android:textColor="@color/text"
                android:background="@drawable/clickable_light"
                android:gravity="start"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/send_feedback"
                android:drawableStart="@drawable/ic_open_in_new_black_24dp"
                android:drawablePadding="@dimen/pad"
                android:drawableTint="@color/text" />

            <Button style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/viewTermsOfUseButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padQuadruple"
                android:textColor="@color/text"
                android:background="@drawable/clickable_light"
                android:gravity="start"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/terms_of_use"
                android:drawableStart="@drawable/ic_open_in_new_black_24dp"
                android:drawablePadding="@dimen/pad"
                android:drawableTint="@color/text" />

            <Button style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/viewPrivacyPolicyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padQuadruple"
                android:textColor="@color/text"
                android:background="@drawable/clickable_light"
                android:gravity="start"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/privacy_policy"
                android:drawableStart="@drawable/ic_open_in_new_black_24dp"
                android:drawablePadding="@dimen/pad"
                android:drawableTint="@color/text" />

            <Button style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/showHelpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padQuadruple"
                android:textColor="@color/text"
                android:background="@drawable/clickable_light"
                android:gravity="start"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/show_help"
                android:drawableStart="@drawable/ic_help_outline_black_24dp"
                android:drawablePadding="@dimen/pad"
                android:drawableTint="@color/text" />

            <Button style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/returnToMapButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padQuadruple"
                android:textColor="@color/text"
                android:background="@drawable/clickable_light"
                android:gravity="start"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/return_to_map"
                android:drawableStart="@drawable/ic_arrow_back_black_24dp"
                android:drawablePadding="@dimen/pad"
                android:drawableTint="@color/text" />

            <TextView
                android:id="@+id/appVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padQuadruple"
                android:paddingEnd="@dimen/padQuadruple"
                android:paddingBottom="@dimen/padDouble"
                android:textColor="@color/textHint"
                android:gravity="center_horizontal" />

        </LinearLayout>

    </ScrollView>

</closer.vlllage.com.closer.ui.FitsSystemWindowsConstraintLayout>