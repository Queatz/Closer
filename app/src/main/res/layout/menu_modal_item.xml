<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="@dimen/padDouble"
        android:text="@string/take_photo"
        android:textColor="@color/textInverse"
        android:drawablePadding="@dimen/pad"
        android:drawableStart="@drawable/ic_camera_black_24dp"
        android:drawableTint="@color/textInverse"
        android:background="@drawable/clickable_accent_flat" />

</android.support.constraint.ConstraintLayout>